use math::Vector3;
use generics::{Shared, WeakPtr, MapEntry};

/// Alias for a Vector3 pointer.
/// Demonstrates doc comments on type aliases.
pub type Vec3Ptr = *const Vector3;

/// Alias for a mutable i32 pointer.
pub type IntMutPtr = *mut i32;

// ========== Generic type aliases ==========

/// Generic pointer type alias
pub type Ptr<T> = *mut T;

/// Generic const pointer type alias
pub type ConstPtr<T> = *const T;

/// Alias that wraps a generic type with a type parameter
pub type SharedRef<T> = Shared<T>;

/// Alias for weak pointer to a type
pub type WeakRef<T> = WeakPtr<T>;

/// Alias for MapEntry with type parameters
pub type Entry<K, V> = MapEntry<K, V>;

/// Pointer to a generic type
pub type SharedPtr<T> = *mut Shared<T>;

// ========== Container using non-generic aliases ==========

/// Container using the non-generic type aliases
pub type Container {
    pub ptr: Vec3Ptr,
    pub int_ptr: IntMutPtr,
}

// ========== Container using generic type aliases ==========

/// Container using generic aliases with concrete types
#[size(0x30)]
pub type GenericAliasContainer {
    pub shared_vec: SharedRef<Vector3>,
    pub weak_vec: WeakRef<Vector3>,
    pub entry: Entry<u32, Vector3>,
    pub vec_ptr: Ptr<Vector3>,
    pub const_vec_ptr: ConstPtr<Vector3>,
}
